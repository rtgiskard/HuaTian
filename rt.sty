	\setCJKmainfont[#1]{#2}
	\setCJKmonofont[#1]{#3}
	\setCJKsansfont[#1]{#3}

	\setmainfont[#1]{#2}
	\setmonofont[#1]{#3}
	\setsansfont[#1]{#3}

	% e.g.:
	%	Comic Neue
	%	Inconsolata
}

